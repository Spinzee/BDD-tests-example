@using Products.WebModel.Resources.Common

<a href="" data-toggle="modal" data-target="#landline-number-modal" title="@Landline_Resources.LightboxAlt">@Landline_Resources.LightboxLink</a>

<div class="modal fade" role="dialog" id="landline-number-modal" tabindex="-1" aria-labelledby="landline-number-modal-label">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" title="@Resources.ModalCloseButtonAlt">
                    @Resources.ModalCloseButtonText
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <p class="centered" id="landline-number-modal-label">@Landline_Resources.LandlineNumberModalListHeader</p>
                        <ul class="bullet-list">
                            <li class="gap">@Landline_Resources.ListItem1</li>
                            <li>@Landline_Resources.ListItem2</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>