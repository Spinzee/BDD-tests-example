@model Products.WebModel.ViewModels.Common.ConfirmationModalViewModel

<div id="@Model.ModalId" class="modal" tabindex="-1" role="dialog" aria-labelledby="modal-title modal-body">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content centered">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" title="@Model.CloseButtonAlt">
                    @Model.CloseButtonLabel
                </button>
            </div>
            <div class="modal-body">
                @*Note: svg-defs.svg included in progress bar partial*@
                <svg class="gap-xl" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 74 74" width="74" height="74">
                    <circle fill="#FFB100" cx="37" cy="37" r="36" />
                    <path fill="#fff" d="M54 14c-2.3 2.7-5.8 4-9.2 4-5.4.6-11-.8-16.3 1-2 .6-3.5 1.7-5 3.2l5.7 21c2.3-2.7 5.7-4 9-4.2 5.4-.5 11 1 16.3-.8 2-.6 3.7-1.8 5-3.3zM27.3 62.2L16.8 23a2 2 0 0 1 3.9-1.2L31.2 61a2 2 0 0 1-3.9 1.2z" />
                </svg>
                <p id="modal-body">@Model.FirstMessage</p>
                @if (!string.IsNullOrEmpty(Model.SecondMessage))
                {
                    <span id="modal-body">@Model.SecondMessage</span>
                    <br />
                }
                @if (!string.IsNullOrEmpty(Model.ThirdMessage))
                {
                    <p id="modal-body">@Model.ThirdMessage</p>
                }
               
                <a class="button button-primary ok" href="@Model.RedirectUrl" title="@Model.ButtonTextAlt">@Model.ButtonText</a> <br />
                <button class="button button-cancel no-margin-top" id="modal-button-text" data-dismiss="modal" title="@Model.CancelButtonTextAlt">@Model.CancelButtonText</button>
            </div>
        </div>
    </div>
</div>