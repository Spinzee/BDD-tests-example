@using Products.WebModel.Resources.Common
@using Products.WebModel.Resources.Energy
@using Products.WebModel.Resources.HomeServices
@model Products.WebModel.ViewModels.Energy.ExtrasItemViewModel

<div class="modal in" role="dialog" id="@Model.MoreInformationModalId" tabindex="-1" aria-labelledby="modal-title modal-body">
    <div class="modal-mega extras-fixnprotect-modal-banner" role="document">
        <div class="modal-content upgrades-modal">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" title="@Resources.ModalCloseButtonAlt">
                    @Resources.ModalCloseButtonText
                </button>
            </div>
            <div class="modal-banner-image extras-fixnprotect-modal-banner">
                <div class="col-xs-12 col-sm-6 col-md-6 upgrades-modal-header">
                    <h2>@Model.Name</h2>
                    <p class="tagline">
                        @Model.TagLine
                    </p>
                </div>
            </div>
            <div class="modal-body extras-items-more-info">
                <div class="row mega-modal-header-after gap-xl">
                    <div class="col-xs-12 col-sm-4 col-md-4 broadband-price-section extras @Model.AddedCssClass" id="@Model.ModalExtraPriceHeaderId">
                        <div class="extras-price-box">
                            <div class="price">@Model.Price</div>
                            <div class="extra-price-lbl">
                                <div>@Extras_Resources.Per</div>
                                <div>@Extras_Resources.Month</div>
                            </div>
                        </div>
                        <div class="added-desktop">Added</div>
                        <div class="add-remove-extras">
                            <input class="button @Model.ModalAddRemoveButtonCssClass add-remove-extra-button extras-page button-extra-@Model.ProductCode"
                                   type="button"
                                   value="@Model.ModalAddRemoveButtonText"
                                   data-extra-container-id="@Model.ExtraContainerId"
                                   data-extra-modal-priceheader-id="@Model.ModalExtraPriceHeaderId"
                                   data-product-code="@Model.ProductCode"
                                   data-button-group="button-extra-@Model.ProductCode"
                                   data-is-added="@Model.IsAddedToBasketStr"
                                   data-add-button-text="@Extras_Resources.ModalAddButtonText"
                                   data-remove-button-text="@Extras_Resources.ModalRemoveButtonText"
                                   data-remove-alt-text="@Model.RemoveButtonAltText"
                                   data-add-alt-text="@Model.AddButtonAltText"
                                   data-more-information-modal-id="@Model.MoreInformationModalId"
                                   name="button-submit-extra"
                                   title="@Model.AddRemoveButtonAltText" />
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-7">
                        <p class="tariff-description">@Model.Description</p>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-7 gap-top-xl">
                        <h3>@Model.YouWillGetHeaderText</h3>
                        <ul class="bullet-list list--spaced">
                            @foreach (string item in Model.YouWillGetList)
                            {
                                <li>@item</li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="row equal gap-xl">
                    <div class="col-xs-12 col-sm-6 additional-info-alt panel left-margin-gap right-gutter">
                        <h3>@CoverDetails_Resources.IncludedHeader</h3>
                        <ul class="bullet-list tick-list list--spaced">
                            @foreach (string item in Model.BulletList1)
                            {
                                <li>@item</li>
                            }
                        </ul>
                    </div>
                    <div class="col-xs-12 col-sm-6 additional-info-alt panel right-margin-gap">
                        <h3>@CoverDetails_Resources.NotIncludedHeader</h3>
                        <ul class="bullet-list tick-list list--spaced" id="cross-list">
                            @foreach (string item in Model.BulletList2)
                            {
                                <li>@item</li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <h4>@AvailableBundleTariffs_Resources.ImportantInformationHeader</h4>
                        <p class="subscript">
                            @Extras_Resources.ImportantInfoElecWringPara1
                            <a href="@Extras_Resources.HomeServicesPolicyLinkUrl" target="_blank" title="@Extras_Resources.HomeServicesPolicyLinkAlt">@Extras_Resources.HomeServicesPolicyLinkText</a>
                            @Extras_Resources.ImportantInfoElecWringPara2 <a href="@Extras_Resources.ElecWiringPdfLinkUrl" target="_blank" title="@Extras_Resources.ElecWiringPdfLinkAlt">@Extras_Resources.ElecWiringPdfLinkText</a>@Extras_Resources.ImportantInfoElecWringPara3
                        </p>
                        <div class="modal-close">
                            <button type="button" class="button button-edge button-secondary" data-dismiss="modal" aria-label="Close" title="@Resources.ModalCloseButtonAlt">@Resources.ModalCloseButtonText</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>