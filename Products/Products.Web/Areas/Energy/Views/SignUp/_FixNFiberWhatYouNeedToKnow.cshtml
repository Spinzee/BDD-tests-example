@using Products.WebModel.Resources.Broadband
@using Products.WebModel.Resources.Energy
@model Products.WebModel.ViewModels.Energy.BundleUpgradeViewModel

<div class="extra-content">
    <div class="container">
        <h3>@Accordion_Resources.AccordionHeader</h3>
        <div class="accordion-group">
            <div class="accordion">
                <div class="accordion-header">
                    <a href="#" title="@Upgrades_Resources.FixNFibrePlusImportantInformationHeaderAlt"
                       class="accordion-button"
                       role="button"
                       aria-controls="accordion-content">
                        <h2>@Upgrades_Resources.FixNFibrePlusImportantInformationHeader</h2>
                    </a>
                </div>
                <div class="accordion-content" aria-hidden="true">
                    <div class="row">
                        <p>
                            @Upgrades_Resources.FixNFibrePlusImportantInformationPara1_1
                            <a href="@AvailablePackages_Resources.BroadbandTrafficManagementLinkUrl"
                               target="_blank"
                               title="@Accordion_Resources.BundleBroadbandPhoneDetailsPara8_1Link1Alt">
                                @Accordion_Resources.BundleBroadbandPhoneDetailsPara8_1Link1Text
                            </a>
                            @Upgrades_Resources.FixNFibrePlusImportantInformationPara1_2
                            <a href="@AvailablePackages_Resources.AcceptableUsePolicyLinkUrl"
                               target="_blank"
                               title="@Accordion_Resources.BundleBroadbandPhoneDetailsPara8_1Link2Alt">
                                @Accordion_Resources.BundleBroadbandPhoneDetailsPara8_1Link2Text
                            </a>
                            @Upgrades_Resources.FixNFibrePlusImportantInformationPara1_3
                            <a href="@AvailablePackages_Resources.HappinessGuaranteeLinkUrl"
                               target="_blank"
                               title="@Accordion_Resources.BundleBroadbandPhoneDetailsPara7_Link1Alt">
                                @Upgrades_Resources.FixNFiberPlusImportantInformationPara1_Link1Text
                            </a>
                        </p>
                    </div>
                </div>
            </div>

            <div class="accordion">
                <div class="accordion-header">
                    <a href="#"
                       title="@Upgrades_Resources.SavingsCalculationHeader_Alt"
                       class="accordion-button"
                       role="button"
                       aria-controls="accordion-content">
                        <h2>@Upgrades_Resources.SavingsCalculatorHeader</h2>
                    </a>
                </div>
                <div class="accordion-content" aria-hidden="true">
                    <div class="row" id="how-savings-calculated">
                       @Html.Partial("_UpgradesHowSavingsCalculated", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
